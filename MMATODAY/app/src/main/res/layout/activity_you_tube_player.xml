<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_you_tube_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="space.samatov.mmatoday.YouTubePlayerFragmentActivity">
    <fragment
        android:id="@+id/youtubePlayerFragment"
        android:name="space.samatov.mmatoday.Fragments.YoutubeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/youtubePlayerTextView"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"/>
</LinearLayout>
